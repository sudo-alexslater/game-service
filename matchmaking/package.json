	"description": "",
	"workspaces": [
		"../common"
	],
	"dependencies": {
		"@grpc/grpc-js": "^1.11.1",
		"@grpc/proto-loader": "^0.7.13",
		"express": "^4.19.2"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"nodemon": "^3.1.4",
		"typescript": "^5.5.4"
	}
}
