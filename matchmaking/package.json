{
	"name": "@alexslater-io/matchmaking-container",
	"version": "1.0.0",
	"main": "./dist/index.js",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"start": "nodemon src/matchmaking/src/index.js",
		"deploy": "docker build -t alexslaterio/game-service-matchmaking -f ./src/docker/matchmaking.dockerfile .",
		"compile": "tsc",
		"build": "npm run build:deps && npm run compile",
